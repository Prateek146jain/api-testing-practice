		{
			"name": "Get User Details",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Check the response body\", () => {\r",
							"    // var response=pm.response.json();\r",
							"    var jsonData = pm.response.json();\r",
							"    var userId = pm.collectionVariables.get(\"userId\")\r",
							"    var userName = pm.collectionVariables.get(\"userName\")\r",
							"    pm.expect(jsonData.id).to.eql(userId);\r",
							"    pm.expect(jsonData.name).to.eql(userName);\r",
							"    pm.expect(jsonData.gender).to.eql(\"male\")\r",
							"});\r",
							"pm.test(\"Response time is less than 1000ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);\r",
							"});\r",
							"\r",
							"\r",
							"pm.test(\"Content-Type is present\", function () {\r",
							"    pm.response.to.have.header(\"Content-Type\");\r",
							"    });\r",
							"\r",
							"\r",
							"pm.test(\"Validate Json Schema\",() => {\r",
							"\r",
							"    var schema = {\r",
							"\r",
							"         \"type\": \"object\",\r",
							"      \"properties\": {\r",
							"        \"id\": { \"type\": \"integer\" },\r",
							"        \"name\": { \"type\": \"string\" },\r",
							"        \"email\": { \"type\": \"string\" },\r",
							"        \"gender\": { \"type\": \"string\" },\r",
							"        \"status\": { \"type\": \"string\" }\r",
							"      },\r",
							"      \"required\": [\"id\",\"name\",\"email\",\"gender\",\"status\"]\r",
							"    }\r",
							"\r",
							"\r",
							"\r",
							"});"
						],
