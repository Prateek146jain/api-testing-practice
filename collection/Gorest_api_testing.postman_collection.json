				{
					"listen": "test",
					"script": {
						"exec": [
							"// Parse response data\r",
							"var jsonData = pm.response.json();\r",
							"var userName=jsonData.name;\r",
							"pm.collectionVariables.set(\"userName\",userName);\r",
							"\r",
							"\r",
							"// Store request body for comparison\r",
							"var requestBody = JSON.parse(pm.request.body.raw);\r",
							"\r",
							"// 1. Status Code Validation\r",
							"pm.test(\"Status code is 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// 2. Response Time Performance Check\r",
							"pm.test(\"Response time is less than 2000ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(2000);\r",
							"});\r",
							"\r",
							"// 3. Response Structure Validation - Required Fields\r",
							"pm.test(\"Response contains all required fields\", function () {\r",
							"    pm.expect(jsonData).to.have.property('id');\r",
							"    pm.expect(jsonData).to.have.property('name');\r",
							"    pm.expect(jsonData).to.have.property('email');\r",
							"    pm.expect(jsonData).to.have.property('status');\r",
							"});\r",
							"\r",
							"// 4. Data Type Validation\r",
							"pm.test(\"Field 'id' is a number\", function () {\r",
							"    pm.expect(jsonData.id).to.be.a('number');\r",
							"});\r",
							"\r",
							"pm.test(\"Field 'name' is a string\", function () {\r",
							"    pm.expect(jsonData.name).to.be.a('string');\r",
							"});\r",
							"\r",
							"pm.test(\"Field 'email' is a string\", function () {\r",
							"    pm.expect(jsonData.email).to.be.a('string');\r",
							"});\r",
							"\r",
							"pm.test(\"Field 'status' is a string\", function () {\r",
							"    pm.expect(jsonData.status).to.be.a('string');\r",
							"});\r",
							"\r",
							"// 5. Data Integrity - Updated Values Match Request Body\r",
							"pm.test(\"Updated name matches request body\", function () {\r",
							"    pm.expect(jsonData.name).to.eql(requestBody.name);\r",
							"});\r",
							"\r",
							"pm.test(\"Updated email matches request body\", function () {\r",
							"    pm.expect(jsonData.email).to.eql(requestBody.email);\r",
							"});\r",
							"\r",
							"pm.test(\"Updated status matches request body\", function () {\r",
							"    pm.expect(jsonData.status).to.eql(requestBody.status);\r",
							"});\r",
							"\r",
							"// 6. Email Format Validation\r",
							"pm.test(\"Email has valid format\", function () {\r",
							"    const emailRegex = /^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/;\r",
							"    pm.expect(jsonData.email).to.match(emailRegex);\r",
							"});\r",
							"\r",
							"// 7. Status Field Validation\r",
							"pm.test(\"Status field is 'active'\", function () {\r",
							"    pm.expect(jsonData.status).to.eql(\"active\");\r",
							"});\r",
							"\r",
							"// 8. User ID Should Remain Unchanged\r",
							"pm.test(\"User ID remains unchanged after update\",()=>{\r",
							"    var userId = pm.variables.get(\"userId\");\r",
							"    if (userId){\r",
							"        pm.expect(jsonData.id).to.equal(Number(userId));\r",
							"        // console.log(userId)\r",
							"        \r",
							"    }else{\r",
							"\r",
							"        pm.expect(jsonData.id).to.be.a(\"number\")\r",
							"    }\r",
							"\r",
							"\r",
							"})\r",
							"\r",
							"// 9. Response Header Validation\r",
							"pm.test(\"Content-Type header is present and contains application/json\", function () {\r",
							"    pm.response.to.have.header(\"Content-Type\");\r",
							"    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");\r",
							"});\r",
							"\r",
							"// 10. JSON Schema Validation\r",
							"// pm.test(\"Response matches JSON schema\", function () {\r",
							"//     const schema = {\r",
							"//         \"type\": \"object\",\r",
							"//         \"required\": [\"id\", \"name\", \"email\", \"status\"],\r",
							"//         \"properties\": {\r",
							"//             \"id\": {\r",
							"//                 \"type\": \"integer\",\r",
							"//                 \"minimum\": 1\r",
							"//             },\r",
							"//             \"name\": {\r",
							"//                 \"type\": \"string\",\r",
							"//                 \"minLength\": 1\r",
							"//             },\r",
							"//             \"email\": {\r",
							"//                 \"type\": \"string\",\r",
							"//                 \"format\": \"email\"\r",
							"//             },\r",
							"//             \"status\": {\r",
							"//                 \"type\": \"string\",\r",
							"//                 \"enum\": [\"active\", \"inactive\"]\r",
							"//             }\r",
							"//         },\r",
							"//         \"additionalProperties\": false\r",
							"//     };\r",
							"    \r",
							"//     pm.expect(ajv.validate(jsonData, schema)).to.be.true;\r",
							"// });\r",
							"\r",
							"\r",
							"\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
